<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#fff5f5f5" >

        <include
            android:id="@+id/header"
            layout="@layout/common_title_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:layout_marginTop="@dimen/px32" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:background="#fff2f2f2" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫描代码:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="#ff999999"
                        android:layout_marginLeft="@dimen/px24"
                        android:textSize="@dimen/px36" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品类型:"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_type"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品名称:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_name"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品型号:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_model"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品规格:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_standard"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品单位:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_unit"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物资数量:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_num"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:inputType="number"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="储存位置:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_store_location"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产日期:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/equip_produce_date"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_keep_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保  质  期:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/arrow"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:text="天"
                        android:textSize="@dimen/px32"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px24" />
                    <TextView
                        android:id="@+id/equip_keep"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_keep_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow"
                        android:textColor="#ff999999"
                        android:inputType="number"
                        android:background="#ffffffff"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff2f2f2"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px24"
                        android:text="图片附件"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px32" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#33666666" />
                    <hz.framework.android.View.InsideGridView
                        android:background="#ffffffff"
                        android:id="@+id/addPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:verticalSpacing="@dimen/px48"
                        android:columnWidth="@dimen/px132"
                        android:stretchMode="columnWidth"
                        android:numColumns="4"
                        android:listSelector="@android:color/transparent"
                        android:horizontalSpacing="@dimen/px48"
                        android:padding="@dimen/px24"
                        android:layoutAnimation="@anim/navagation_gridview_anim"
                        >
                    </hz.framework.android.View.InsideGridView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66666666"
        android:visibility="gone"
        />
</FrameLayout>
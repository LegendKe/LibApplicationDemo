<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#fff5f5f5" >

        <include
            android:id="@+id/header"
            layout="@layout/common_title_bar"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:background="#fff2f2f2" >
                <RelativeLayout
                    android:id="@+id/equip_type"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装备类型:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow5"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_txt"
                        android:layout_toRightOf="@id/equip_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow5"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装备名称:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow6"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_name"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_name_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow6"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入装备名称"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_model_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装备型号:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow11"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_model"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_model_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow11"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入物品型号"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_status_layout"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_status_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装备状态:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow8"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_status_value"
                        android:layout_toRightOf="@id/equip_status_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow8"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_store_location"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_store_location_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="储存位置:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow9"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_store_location_txt"
                        android:layout_toRightOf="@id/equip_store_location_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow9"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_in_date"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_in_date_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入库时间:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow13"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_in_date_value"
                        android:layout_toRightOf="@id/equip_in_date_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow13"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66666666"
        android:visibility="gone"
        />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<hz.framework.android.View.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px132"
    android:layout_height="@dimen/px132" >
<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView 
    android:id="@+id/imgview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:background="@drawable/default_pic"
    />
    <ImageButton
        android:id="@+id/id_item_select"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:layout_gravity="right|top"
        android:src="@drawable/picture_unselected" />
</FrameLayout>
</hz.framework.android.View.SquareLayout>
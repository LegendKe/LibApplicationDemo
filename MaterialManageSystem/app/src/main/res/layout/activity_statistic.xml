<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="#fff2f2f2"
    android:layout_height="fill_parent" >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/px32"
        android:background="#55888888"
        />
    <RelativeLayout
        android:id="@+id/equip_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="装备总数"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
    <RelativeLayout
        android:id="@+id/equip_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="装备类型"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
    <RelativeLayout
        android:id="@+id/equip_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="装备状态"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
    <RelativeLayout
        android:id="@+id/equip_depart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="部门占比"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
</LinearLayout>
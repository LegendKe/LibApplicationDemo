<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_list_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#fff2f2f2"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffffff"
        >
        <TextView
            android:id="@+id/equip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灭火器"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:paddingLeft="@dimen/px18"
            android:paddingTop="@dimen/px12"
            android:paddingBottom="@dimen/px12"
            />
        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="124631241542"
            android:gravity="right"
            android:paddingRight="@dimen/px24"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:paddingLeft="@dimen/px18"
            android:paddingTop="@dimen/px12"
            android:paddingBottom="@dimen/px12"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ff666666"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="型       号"
            android:id="@+id/task_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/mode"
            android:layout_toRightOf="@id/task_name_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="单       位"
            android:id="@+id/dept_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/unit"
            android:layout_toRightOf="@id/dept_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="数       量"
            android:id="@+id/equip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/number"
            android:layout_toRightOf="@id/equip_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="生产日期"
            android:id="@+id/task_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/produceDate"
            android:layout_toRightOf="@id/task_location_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="@dimen/px32"
        android:background="#66666666"
        />
</LinearLayout>


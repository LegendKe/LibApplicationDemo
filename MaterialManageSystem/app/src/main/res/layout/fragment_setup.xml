<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff5f5f5" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px250"
        android:orientation="horizontal"
        android:background="@drawable/my_bg"
        >
        <ImageView
            android:layout_width="@dimen/px90"
            android:layout_height="@dimen/px90"
            android:src="@drawable/my_head"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/px20"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px30"
                        android:textColor="#ffffffff"
                        android:text="欢迎您，"/>
                    <TextView
                        android:id="@+id/view_settingpage_name"
                        android:layout_width="wrap_content"
                        android:textColor="#ffffffff"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px30"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55888888"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/px32"
        android:background="#55888888"
        />
    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="@dimen/px24" >
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/user_head" />
        <TextView
            android:layout_toRightOf="@id/user_icon"
            android:id="@+id/entry_item_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="@dimen/px24" >
        <ImageView
            android:id="@+id/am_icon"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/changepass" />
        <TextView
            android:layout_toRightOf="@id/am_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="修改密碼"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
        android:layout_width="@dimen/px40"
        android:layout_height="@dimen/px40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55888888"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:background="#ffffffff"
        android:clickable="true"
        android:id="@+id/checkUpdate"
        android:padding="@dimen/px24"
        >
        <ImageView
            android:id="@+id/update_icon"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/checkupdate" />
        <TextView
            android:layout_toRightOf="@id/update_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px40"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:id="@+id/versionCode"
            android:text="v1.0"
            android:layout_toLeftOf="@id/arrow"
            android:layout_marginRight="@dimen/px24" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55888888"
        />
    <RelativeLayout
        android:id="@+id/rl_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="@dimen/px24" >
        <ImageView
            android:id="@+id/al_icon"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/autologin" />
        <TextView
            android:layout_toRightOf="@id/al_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:gravity="center"
            android:text="自动登陆"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <CheckBox
            android:id="@+id/auto_login_mode"
            style="@style/AddressDefaultCheckBox"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:checked="false"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px24"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
    <RelativeLayout
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:background="#ffffffff"
        android:clickable="true"
        android:padding="@dimen/px24"
        >
        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="@dimen/px48"
            android:layout_height="@dimen/px48"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/logout" />
        <TextView
            android:layout_toRightOf="@id/logout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:gravity="center"
            android:text="注销登陆"
            android:textColor="#ff888888"
            android:textSize="@dimen/px32" />

        <ImageView
            android:layout_width="@dimen/px40"
            android:layout_height="@dimen/px40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55888888"
        />

</LinearLayout>
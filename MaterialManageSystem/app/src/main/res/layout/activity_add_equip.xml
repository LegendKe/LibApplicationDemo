<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="#fff5f5f5" >

        <include
            android:id="@+id/header"
            layout="@layout/common_title_bar"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:layout_marginTop="@dimen/px32" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:background="#fff2f2f2" >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫描代码:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="#ff999999"
                        android:layout_marginLeft="@dimen/px24"
                        android:textSize="@dimen/px36" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="操作类型:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/oper_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px32"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_type"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品类型:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow5"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_txt"
                        android:layout_toRightOf="@id/equip_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow5"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品名称:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow6"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_name"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_name_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow6"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入物品名称"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_model_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品型号:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow11"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_model"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_model_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow11"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入物品型号"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_standard_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品规格:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow12"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_standard"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_standard_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow12"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入物品规格"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_unit"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_unit_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物品单位:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow7"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_unit_txt"
                        android:layout_toRightOf="@id/equip_unit_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow7"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_num_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物资数量:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow8"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/voice_input" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_num_value"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@id/equip_num_txt"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow8"
                        android:textColor="#ff999999"
                        android:background="#ffffffff"
                        android:hint="请输入物资数量"
                        android:textColorHint="#ff999999"
                        android:inputType="number"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_store_location"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_store_location_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="储存位置:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow9"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_store_location_txt"
                        android:layout_toRightOf="@id/equip_store_location_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow9"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_produce_date"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_produce_date_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产日期:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <ImageView
                        android:id="@+id/arrow13"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:layout_marginRight="@dimen/px24"
                        android:src="@drawable/arrow_right" />
                    <TextView
                        android:id="@+id/equip_produce_date_txt"
                        android:layout_toRightOf="@id/equip_produce_date_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow13"
                        android:text="请选择"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <RelativeLayout
                    android:id="@+id/equip_keep_time"
                    android:layout_width="fill_parent"
                    android:background="#ffffffff"
                    android:layout_height="@dimen/px96" >
                    <TextView
                        android:id="@+id/equip_keep_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保  质  期:"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px24"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px36"
                        />
                    <TextView
                        android:id="@+id/arrow10"
                        android:layout_width="@dimen/px40"
                        android:layout_height="@dimen/px40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:text="天"
                        android:textSize="@dimen/px32"
                        android:textColor="#ff999999"
                        android:layout_marginRight="@dimen/px24" />
                    <hz.framework.android.View.AutoHiddenHintEditText
                        android:id="@+id/equip_keep_txt"
                        android:layout_toRightOf="@id/equip_keep_pre"
                        android:layout_marginLeft="@dimen/px24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/arrow10"
                        android:textColor="#ff999999"
                        android:inputType="number"
                        android:background="#ffffffff"
                        android:hint="请输入物资保质期"
                        android:textColorHint="#ff999999"
                        android:layout_marginRight="@dimen/px10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px32"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#66666666"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff2f2f2"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/px24"
                        android:text="上传图片"
                        android:textColor="#ff999999"
                        android:textSize="@dimen/px32" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#33666666" />
                    <hz.framework.android.View.InsideGridView
                        android:background="#ffffffff"
                        android:id="@+id/addPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:verticalSpacing="@dimen/px48"
                        android:columnWidth="@dimen/px132"
                        android:stretchMode="columnWidth"
                        android:numColumns="4"
                        android:listSelector="@android:color/transparent"
                        android:horizontalSpacing="@dimen/px48"
                        android:padding="@dimen/px24"
                        android:layoutAnimation="@anim/navagation_gridview_anim"
                        >
                    </hz.framework.android.View.InsideGridView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66666666"
        android:visibility="gone"
        />
</FrameLayout>
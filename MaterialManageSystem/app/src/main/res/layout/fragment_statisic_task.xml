<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff2f2f2" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12356"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="任务总数"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/totalNum"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#66666666"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/addInMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12356"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="本月新增"
                android:layout_below="@id/addInMonth"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#66666666"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/addInToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12356"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="今日新增"
                android:layout_below="@id/addInToday"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px32"
        android:background="#ffffffff"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linearLayout_line"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/px450" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px32"
        android:background="#ffffffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/px24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/px24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/px24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/px24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px24"
            android:layout_marginBottom="@dimen/px24"
            >
            <hz.framework.android.View.CirclePercentView
                app:stripeWidth="@dimen/px5"
                app:centerTextSize="@dimen/px28"
                app:percent="75"
                app:circle_radius="@dimen/px60"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px24"
            android:layout_marginBottom="@dimen/px24"
            >
            <hz.framework.android.View.CirclePercentView
                app:stripeWidth="@dimen/px5"
                app:centerTextSize="@dimen/px28"
                app:percent="60"
                app:circle_radius="@dimen/px60"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px24"
            android:layout_marginBottom="@dimen/px24"
            >
            <hz.framework.android.View.CirclePercentView
                app:stripeWidth="@dimen/px5"
                app:centerTextSize="@dimen/px28"
                app:percent="40"
                app:circle_radius="@dimen/px60"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px24"
            android:layout_marginBottom="@dimen/px24"
            >
            <hz.framework.android.View.CirclePercentView
                app:stripeWidth="@dimen/px5"
                app:centerTextSize="@dimen/px28"
                app:percent="90"
                app:circle_radius="@dimen/px60"
                android:layout_weight="1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>




    </LinearLayout>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tabRadioBtn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff" >

        <include
            android:id="@+id/header"
            layout="@layout/common_title_bar"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/header"
            android:orientation="vertical" >

            <hz.framework.android.View.NoScrollViewPager
                android:id="@+id/views"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="#fff2f2f2" >
            </hz.framework.android.View.NoScrollViewPager>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ffeeeeee"
                />
            <LinearLayout
                android:id="@+id/item_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px110"
                android:background="#fff9f9f9"
                android:gravity="center"
                android:orientation="horizontal" >
                <RadioGroup
                    android:id="@+id/rgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:id="@+id/tab_task"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/task_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="任务"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:id="@+id/tab_equip_apply_approve"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/task_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="审批"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_scan"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/scan_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="扫描"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_equip_apply"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/apply_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="装备申领"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_apply_track"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/track_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="记录跟踪"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                    android:id="@+id/tab_search"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:clickable="true"
                    tabRadioBtn:drawableTop="@drawable/search_tab_selector"
                    tabRadioBtn:drawablesize="@dimen/px60"
                    android:gravity="center"
                    android:text="搜索"
                    android:textColor="@drawable/tab_text_selector"
                    android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_equip"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/equip_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="装备"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_truck"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/truck_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="车辆"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />

                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_statistic"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/statistic_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="统计"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_statistic_task"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/statistic_task_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="任务统计"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                    android:id="@+id/tab_statistic_equip"
                    android:paddingTop="@dimen/px5"
                    android:paddingBottom="@dimen/px5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:button="@null"
                    android:clickable="true"
                    tabRadioBtn:drawableTop="@drawable/statistic_equip_tab_selector"
                    tabRadioBtn:drawablesize="@dimen/px60"
                    android:gravity="center"
                    android:text="装备统计"
                    android:textColor="@drawable/tab_text_selector"
                    android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_statistic_truck"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/statistic_truck_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="车辆统计"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_location"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/location_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="车辆定位"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_contingent"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/contingent_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="队伍"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                    <com.ptja.android.mms.widget.MyRadioButton
                        android:id="@+id/tab_equip_require"
                        android:paddingTop="@dimen/px5"
                        android:paddingBottom="@dimen/px5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffffff"
                        android:button="@null"
                        android:clickable="true"
                        tabRadioBtn:drawableTop="@drawable/setup_tab_selector"
                        tabRadioBtn:drawablesize="@dimen/px60"
                        android:gravity="center"
                        android:text="申购"
                        android:textColor="@drawable/tab_text_selector"
                        android:textSize="@dimen/px22" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/maskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66666666"
        android:visibility="gone"
        />
</FrameLayout>
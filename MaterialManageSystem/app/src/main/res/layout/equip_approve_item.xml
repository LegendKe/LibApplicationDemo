<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_list_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#fff2f2f2"
    android:orientation="vertical"
     >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffffff"
        >
        <TextView
            android:id="@+id/equip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灭火器"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:paddingLeft="@dimen/px18"
            android:paddingTop="@dimen/px12"
            android:paddingBottom="@dimen/px12"
            />
        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="124631241542"
            android:gravity="right"
            android:paddingRight="@dimen/px24"
            android:textSize="@dimen/px24"
            android:textColor="#ff666666"
            android:paddingLeft="@dimen/px18"
            android:paddingTop="@dimen/px12"
            android:paddingBottom="@dimen/px12"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ff666666"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="领用人"
            android:id="@+id/task_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/requester"
            android:layout_toRightOf="@id/task_name_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="所属部分"
            android:id="@+id/dept_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/dept"
            android:layout_toRightOf="@id/dept_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="领用物资"
            android:id="@+id/equip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/equip"
            android:layout_toRightOf="@id/equip_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffffff"
        android:padding="@dimen/px18"
        android:minHeight="@dimen/px72"
        android:layout_height="wrap_content" >
        <TextView
            android:text="领用用途"
            android:id="@+id/task_location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ff666666"
            android:textSize="@dimen/px24"
            />
        <TextView
            android:id="@+id/usement"
            android:layout_toRightOf="@id/task_location_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px24"
            android:textColor="#ff888888"
            android:textSize="@dimen/px24"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/px12"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="#ffffffff" >

        <Button
            android:id="@+id/no"
            android:layout_width="@dimen/px110"
            android:layout_height="@dimen/px54"
            android:text="驳回"
            android:background="@drawable/selector_deal_border"
            android:textSize="@dimen/px24"
            android:textColor="#ff333333"
            android:layout_alignParentRight="true"
            />
    <Button
        android:id="@+id/yes"
        android:layout_width="@dimen/px110"
        android:layout_height="@dimen/px54"
        android:text="同意"
        android:layout_toLeftOf="@id/no"
        android:background="@drawable/selector_deal_border"
        android:textSize="@dimen/px24"
        android:textColor="#ff333333"
        android:layout_marginRight="@dimen/px24"
        />

    </RelativeLayout>

       <View 
           android:layout_width="match_parent"
           android:layout_height="1px"
           android:layout_marginBottom="@dimen/px32"
           android:background="#66666666"
           />
    </LinearLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff2f2f2" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/totalNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="128"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="车辆总数"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/totalNum"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#66666666"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/addInMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="487"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="任务总数"
                android:layout_below="@id/addInMonth"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#66666666"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px220"
            android:layout_weight="1.0"
            >
            <TextView
                android:id="@+id/addInToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="26"
                android:textSize="@dimen/px50"
                android:textColor="#66666666"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="本周任务"
                android:layout_below="@id/addInToday"
                android:textSize="@dimen/px24"
                android:layout_marginTop="@dimen/px10"
                android:textColor="#66666666"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px32"
        android:background="#ffffffff"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/linearLayout_line"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/px450" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px32"
        android:background="#ffffffff"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px240"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="@dimen/px96"
                android:textColor="#ffaa0000"
                android:gravity="center"
                android:layout_weight="1.0"
                android:layout_marginTop="@dimen/px24"
                />
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="1px"
            android:background="#66666666"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32"
                android:textSize="@dimen/px96"
                android:textColor="#ff0000aa"
                android:gravity="center"
                android:layout_weight="1.0"
                android:layout_marginTop="@dimen/px24"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66666666"
        />



    </LinearLayout>

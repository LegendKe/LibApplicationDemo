<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:layout_alignParentTop="true"
            android:background="#ff2da0fb" >

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="@dimen/px56"
                android:layout_height="@dimen/px56"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/px24"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/px48"
                android:src="@drawable/nav_back_selector"
                android:layout_centerVertical="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px12"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉"
            android:background="@null"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="#fffefefe"
            android:textSize="@dimen/px28" />
        <ImageView
            android:id="@+id/right_image_btn"
            android:layout_width="@dimen/px56"
            android:layout_height="@dimen/px56"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/rightTitleBadgeCount"
            android:layout_width="@dimen/px24"
            android:layout_height="@dimen/px24"
            android:visibility="invisible"
            android:background="@drawable/red_circle"
            android:layout_gravity="center|right"
            android:layout_marginBottom="@dimen/px12"
            android:text="1"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/px15"

            />
    </FrameLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/px36"
                android:paddingRight="@dimen/px36"
                android:text="标题"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#fffefefe"
                android:textSize="@dimen/px36" />
        </RelativeLayout>

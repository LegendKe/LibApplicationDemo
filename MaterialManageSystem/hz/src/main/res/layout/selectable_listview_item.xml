
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal" >
 
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="每天生成"
        android:paddingTop="@dimen/px32"
        android:paddingBottom="@dimen/px32"
        android:paddingLeft="@dimen/px24"
        android:textColor="#ff999999"
        android:textSize="@dimen/px28" />
    
    <ImageView
        android:id="@+id/checkable"
        android:layout_width="@dimen/px48"
        android:layout_height="@dimen/px48"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:layout_marginRight="@dimen/px24"
        android:scaleType="fitXY"
        android:focusable="false"
        android:focusableInTouchMode="false" />
 
</RelativeLayout>
